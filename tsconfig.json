{
  "compilerOptions": {
    "outDir": "./dist/", // Derleme çıktısı için dizin
    "declaration": true,
    "declarationDir": "./dist", // Tanımlama dosyalarının çıktısı için dizin
    "sourceMap": true, // Kaynak haritaları oluştur
    "noImplicitAny": true, // any tipi için uyarılar ver
    "module": "esnext", // Modül sistemi
    "target": "es5", // JavaScript hedef versiyonu
    "jsx": "react", // JSX için React modu
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"],
  "include": ["./src/**/*"]
}